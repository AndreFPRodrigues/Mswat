<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mswat.core.activityManager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
	
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <service android:name="mswat.core.activityManager.HierarchicalService" 
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />            
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/serviceconfig" />
        </service>
        
         <receiver android:name="mswat.controllers.TestingBroadcast" >
            <intent-filter>
                <action android:name="teste" />
            </intent-filter>
        </receiver>
        
         <receiver android:name="mswat.controllers.TouchController" >
            <intent-filter>
                <action android:name="monitor" />
                <action android:name="mswat_init" />
                
            </intent-filter>
        </receiver>
 
    </application>

</manifest>
